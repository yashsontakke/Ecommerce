{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
       "src/**/*",
       "src/types/**/*" // Ensure this line is present
     ],
  "exclude": ["node_modules", "dist"]
}